            <Button x:Name="btn_clear" Content="Clear&#xD;&#xA;" Height="39" Canvas.Left="4" Canvas.Top="5" Width="61" Click="btn_clear_Click" RenderTransformOrigin="0.443,0.661" Panel.ZIndex="10"/>
        </Canvas>

    </Grid>
</Window>
