        xmlns:local="clr-namespace:TestMenu"
        mc:Ignorable="d"
        Title="canvas" Height="450" Width="800">
    <Grid>

        <Canvas  Name="surface" MouseDown="Canvas_MouseDown_1" MouseMove="Canvas_MouseMove_1" Cursor="Pen" Margin="6,4,3,-4" >
